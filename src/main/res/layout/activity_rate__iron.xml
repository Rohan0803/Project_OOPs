<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4"
    tools:context=".Rate_Iron">

    <TextView
        android:id="@+id/Rate_Iron_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Rate Card"
        android:textSize="50sp"
        android:textColor="#FB0303"
        />

    <TextView
        android:id="@+id/RI_Washing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/Rate_Iron_Text"
        android:text="Cloths Ironing"
        android:textSize="30sp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:textColor="#FA4005"
        />


    <CheckBox
        android:id="@+id/ShirtsIron_Chbk"
        android:layout_width="391dp"
        android:layout_height="97dp"
        android:layout_below="@id/RI_Washing"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Rate per Shirts : 5 Rupees "
        android:textColor="@color/colorPrimary"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/pantsIron_Chbk"
        android:layout_width="391dp"
        android:layout_height="97dp"
        android:layout_below="@id/ShirtsIron_Chbk"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Rate per pant : 6 Rupees"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/jacketsIron_Chbk"
        android:layout_width="391dp"
        android:layout_height="97dp"
        android:layout_below="@id/pantsIron_Chbk"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Rate per jacket : 20 Rupees"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp" />

    <CheckBox
        android:id="@+id/suitsIron_Chbk"
        android:layout_width="391dp"
        android:layout_height="97dp"
        android:layout_below="@id/jacketsIron_Chbk"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text=" Female suit : 20 Rupees"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"/>


    <Button
        android:id="@+id/ProceedIron"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/suitsIron_Chbk"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttons"
        android:text="Proceed Next"
        android:textColor="#FFFFFF"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />




</RelativeLayout>